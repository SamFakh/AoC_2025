import { loadPythonSolutions } from "../lib/loadPythonSolutions";

const rawSolutions = loadPythonSolutions("../../AoC_py");

// Parse day and part from filename (e.g., "day_1.1.py" -> day: 1, part: 1)
const solutions = rawSolutions.map((s) => {
    const match = s.filename.match(/day_(\d+)\.(\d+)\.py/);
    return {
        ...s,
        day: match ? parseInt(match[1]) : 0,
        part: match ? parseInt(match[2]) : 0,
    };
}).sort((a, b) => a.day - b.day || a.part - b.part);

// Get unique days
const days = [...new Set(solutions.map((s) => s.day))].sort((a, b) => a - b);

// Group solutions by day
const solutionsByDay = days.reduce((acc, day) => {
    acc[day] = solutions.filter((s) => s.day === day);
    return acc;
}, {} as Record<number, typeof solutions>);
