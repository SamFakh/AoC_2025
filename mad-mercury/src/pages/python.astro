---
import { loadPythonSolutions } from "../lib/loadPythonSolutions";
const solutions = loadPythonSolutions("../../AoC_py");
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>Advent of Code ‚Äî Python Solutions</title>
        <!-- Prism.js for syntax highlighting -->
        <link href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/themes/prism-tomorrow.min.css" rel="stylesheet" />
        <style>
            body {
                font-family: system-ui, sans-serif;
                background: #0b0b12;
                color: #eaeaff;
                padding: 2rem;
            }

            h1 {
                text-align: center;
                font-size: 3rem;
                margin-bottom: 3rem;
                color: #a3c9ff;
                text-shadow: 0 0 15px #2c6cff;
            }

            .grid {
                display: grid;
                gap: 2rem;
                grid-template-columns: repeat(auto-fit, minmax(480px, 1fr));
            }

            .card {
                background: #11111f;
                border-radius: 12px;
                padding: 1.5rem;
                border: 1px solid #22223a;
                box-shadow: 0 0 25px rgba(0, 0, 0, 0.35);
                position: relative;
                overflow: hidden;
            }

            .card::before {
                content: "";
                position: absolute;
                top: -2px;
                left: -2px;
                width: calc(100% + 4px);
                height: calc(100% + 4px);
                background: linear-gradient(60deg, #6ae4ff, #337aff, #6ae4ff);
                z-index: 0;
                opacity: 0.12;
                filter: blur(14px);
            }

            .content {
                position: relative;
                z-index: 2;
            }

            .filename {
                font-size: 1.4rem;
                font-weight: bold;
                color: #8ab4ff;
                margin-bottom: 0.5rem;
                display: flex;
                align-items: center;
                gap: 0.5rem;
            }

            .filename::before {
                content: "üêç";
            }

            .runtime {
                font-size: 0.85rem;
                color: #7a8aaa;
                margin-bottom: 1rem;
                display: flex;
                align-items: center;
                gap: 0.4rem;
            }

            .runtime::before {
                content: "‚ö°";
            }

            /* Tabs */
            .tabs {
                display: flex;
                gap: 0.5rem;
                margin-bottom: 1rem;
                border-bottom: 1px solid #2a2a45;
                padding-bottom: 0.5rem;
            }

            .tab {
                cursor: pointer;
                padding: 0.5rem 1rem;
                border-radius: 8px 8px 0 0;
                background: transparent;
                border: 1px solid transparent;
                color: #7a8aaa;
                font-weight: 500;
                transition: all 0.2s ease;
            }

            .tab:hover {
                color: #a3c9ff;
                background: rgba(42, 42, 85, 0.3);
            }

            .tab.active {
                background: #1a1a2e;
                color: #a3c9ff;
                border-color: #3a3a7f;
                border-bottom-color: transparent;
            }

            .panel {
                display: none;
            }

            .panel.active {
                display: block;
            }

            /* Enhanced code block styling */
            .code-wrapper {
                position: relative;
                border-radius: 10px;
                overflow: hidden;
                background: #1a1a2e;
                border: 1px solid #2a2a55;
            }

            .code-header {
                display: flex;
                align-items: center;
                justify-content: space-between;
                padding: 0.6rem 1rem;
                background: linear-gradient(135deg, #1e1e35, #252545);
                border-bottom: 1px solid #2a2a55;
            }

            .code-lang {
                font-size: 0.75rem;
                font-weight: 600;
                color: #6ae4ff;
                text-transform: uppercase;
                letter-spacing: 0.05em;
            }

            .code-wrapper pre {
                margin: 0 !important;
                padding: 1.2rem !important;
                background: #0d0d1a !important;
                border-radius: 0 !important;
                font-size: 0.9rem !important;
                line-height: 1.6 !important;
                max-height: 400px;
                overflow: auto;
            }

            .code-wrapper pre code {
                font-family: 'Fira Code', 'JetBrains Mono', 'Cascadia Code', Consolas, monospace !important;
                font-size: 0.85rem !important;
                tab-size: 4;
            }

            /* Custom Prism overrides for better look */
            .code-wrapper .token.comment {
                color: #5c6773 !important;
                font-style: italic;
            }

            .code-wrapper .token.string {
                color: #a8ff60 !important;
            }

            .code-wrapper .token.keyword {
                color: #ff79c6 !important;
                font-weight: 500;
            }

            .code-wrapper .token.function {
                color: #66d9ef !important;
            }

            .code-wrapper .token.number {
                color: #ffb86c !important;
            }

            .code-wrapper .token.operator {
                color: #ff79c6 !important;
            }

            .code-wrapper .token.builtin {
                color: #8be9fd !important;
            }

            .code-wrapper .token.class-name {
                color: #8be9fd !important;
            }

            .code-wrapper .token.boolean {
                color: #ff79c6 !important;
            }

            /* Line numbers effect via gradient */
            .code-wrapper pre::before {
                content: "";
                position: absolute;
                left: 0;
                top: 0;
                bottom: 0;
                width: 3px;
                background: linear-gradient(180deg, #6ae4ff, #337aff, #ff79c6);
                opacity: 0.6;
            }

            /* Output box styling */
            .output-box {
                background: linear-gradient(135deg, #0a1015, #0f1a1f);
                border-left: 4px solid #4cff9f;
                padding: 1.2rem;
                border-radius: 8px;
                white-space: pre-wrap;
                font-family: 'Fira Code', 'JetBrains Mono', Consolas, monospace;
                font-size: 0.85rem;
                line-height: 1.5;
                color: #b8ffb8;
                max-height: 300px;
                overflow: auto;
            }

            .output-box:empty::after {
                content: "No output";
                color: #5c6773;
                font-style: italic;
            }

            /* Copy button */
            .copy-btn {
                padding: 0.35rem 0.8rem;
                font-size: 0.75rem;
                background: rgba(42, 42, 85, 0.8);
                color: #b9cfff;
                border: 1px solid #3a3a7f;
                border-radius: 6px;
                cursor: pointer;
                transition: all 0.2s ease;
                display: flex;
                align-items: center;
                gap: 0.3rem;
            }

            .copy-btn::before {
                content: "üìã";
                font-size: 0.7rem;
            }

            .copy-btn:hover {
                background: #3a3a77;
                transform: translateY(-1px);
                box-shadow: 0 2px 8px rgba(106, 228, 255, 0.2);
            }

            .copy-btn.copied {
                background: #1a4a2a;
                border-color: #4cff9f;
                color: #4cff9f;
            }

            .copy-btn.copied::before {
                content: "‚úì";
            }

            /* Scrollbar styling */
            .code-wrapper pre::-webkit-scrollbar,
            .output-box::-webkit-scrollbar {
                width: 8px;
                height: 8px;
            }

            .code-wrapper pre::-webkit-scrollbar-track,
            .output-box::-webkit-scrollbar-track {
                background: #1a1a2e;
                border-radius: 4px;
            }

            .code-wrapper pre::-webkit-scrollbar-thumb,
            .output-box::-webkit-scrollbar-thumb {
                background: #3a3a7f;
                border-radius: 4px;
            }

            .code-wrapper pre::-webkit-scrollbar-thumb:hover,
            .output-box::-webkit-scrollbar-thumb:hover {
                background: #4a4a9f;
            }

            /* Responsive */
            @media (max-width: 520px) {
                .grid {
                    grid-template-columns: 1fr;
                }
            }
        </style>

        <script>
            document.addEventListener("DOMContentLoaded", () => {
                // Initialize Prism.js highlighting
                if (window.Prism) {
                    Prism.highlightAll();
                }

                document.querySelectorAll(".card").forEach((card) => {
                    const tabs = card.querySelectorAll(".tab");
                    const panels = card.querySelectorAll(".panel");

                    tabs.forEach((tab, i) => {
                        tab.addEventListener("click", () => {
                            tabs.forEach((t) => t.classList.remove("active"));
                            panels.forEach((p) => p.classList.remove("active"));

                            tab.classList.add("active");
                            panels[i].classList.add("active");
                        });
                    });

                    const copyBtn = card.querySelector(".copy-btn");
                    if (copyBtn) {
                        copyBtn.addEventListener("click", () => {
                            const code = card.querySelector("pre code").innerText;
                            navigator.clipboard.writeText(code);
                            copyBtn.textContent = "Copied!";
                            copyBtn.classList.add("copied");
                            setTimeout(() => {
                                copyBtn.textContent = "Copy";
                                copyBtn.classList.remove("copied");
                            }, 1500);
                        });
                    }
                });
            });
        </script>
        <!-- Prism.js library -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/prism.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-python.min.js"></script>
    </head>

    <body>
        <h1>üêç Python Solutions ‚Äî Advent of Code</h1>

        <div class="grid">
            {
                solutions.map((s) => (
                    <div class="card">
                        <div class="content">
                            <div class="filename">{s.filename}</div>
                            <div class="runtime">
                                Runtime: {s.timeMs.toFixed(2)} ms
                            </div>

                            <div class="tabs">
                                <div class="tab active">Code</div>
                                <div class="tab">Output</div>
                            </div>

                            <div class="panel active">
                                <div class="code-wrapper">
                                    <div class="code-header">
                                        <span class="code-lang">Python</span>
                                        <button class="copy-btn">Copy</button>
                                    </div>
                                    <pre><code class="language-python">{s.code.trim()}</code></pre>
                                </div>
                            </div>

                            <div class="panel">
                                <div class="output-box">{s.output}</div>
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
    </body>
</html>
