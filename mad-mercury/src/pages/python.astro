                                    <div class="code-wrapper">
                                        <div class="code-header">
                                            <span class="code-lang">Python</span>
                                            <button class="copy-btn">Copy</button>
                                        </div>
                                        <pre><code class="language-python">{s.code.trim()}</code></pre>
                                    </div>
                                </div>

                                <div class="panel">
                                    <div class="output-box">{s.output}</div>
                                </div>
                            </div>
                        </div>
                    ))}
